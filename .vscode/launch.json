{
    "version": "0.2.0",
    "inputs": [
        {
            "id": "talksReducerInput",
            "type": "promptString",
            "description": "Path to the video file to process with Talks Reducer",
            "default": "${workspaceFolder}/assets/demo.mp4"
        }
    ],
    "configurations": [
        {
            "name": "gui",
            "type": "debugpy",
            "request": "launch",
            "module": "talks_reducer.gui",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "gui --server",
            "type": "debugpy",
            "request": "launch",
            "module": "talks_reducer.gui",
            "args": [
                "--server"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "server",
            "type": "debugpy",
            "request": "launch",
            "module": "talks_reducer.server",
            "args": [
                "--host", "0.0.0.0"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "server-tray",
            "type": "debugpy",
            "request": "launch",
            "module": "talks_reducer.server_tray",
            "args": [
                "--host",
                "0.0.0.0",
                "--tray-mode",
                "pystray-detached",
                "--debug"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "docs/assets/demo.mp4",
            "type": "debugpy",
            "request": "launch",
            "module": "talks_reducer",
            "args": [
                "docs/assets/demo.mp4"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "docs/assets/demo.mp4 --small",
            "type": "debugpy",
            "request": "launch",
            "module": "talks_reducer",
            "args": [
                "docs/assets/demo.mp4",
                "--small"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "gui docs/assets/demo.mp4 --small",
            "type": "debugpy",
            "request": "launch",
            "module": "talks_reducer.gui",
            "args": [
                "docs/assets/demo.mp4"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "pytest -s tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-s",
                "tests"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        }
    ]
}